
{
  "manifest_version": 3,
  "name": "Daily Cheer Tracker",
  "short_name": "Cheer Tracker",
  "description": "Track your achievements throughout the day and auto-fill Google Forms",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "favicon.ico"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://docs.google.com/*"
  ],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/forms/*"],
      "js": ["src/contentScript.ts"]
    }
  ],
  "icons": {
    "16": "favicon.ico",
    "48": "favicon.ico",
    "128": "favicon.ico"
  }
}
